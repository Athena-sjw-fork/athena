{
  "batch_size":32,
  "num_epochs":500,
  "sorta_epoch":1,
  "ckpt":"examples/tts/data_baker/ckpts/step3_sma/",
  "summary_dir":"examples/tts/data_baker/ckpts/step3_sma/event",

  "solver_type": "tts",
  "solver_gpu":[3],
  "solver_config":{
    "clip_norm":1,
    "log_interval":10,
    "enable_tf_function":true
  },

  "model":"tacotron2",
  "num_classes": null,
  "pretrained_model": null,
  "model_config":{
    "eunits": 512,
    "e_convlayers": 3,
    "ekernels": 5,
    "e_rnnlayers": 1,

    "zoneout_rate": 0.1,
    "dropout_rate": 0.5,

    "dlayers": 2,
    "dunits": 1024,

    "prenet_layers": 2,
    "prenet_units": 256,

    "postnet_layers": 5,
    "postnet_kernel": 5,
    "postnet_filters": 512,

    "att_dim": 128,
    "att_chans": 32,
    "att_filters": 15,
    "step_monotonic": true,
    "sma_mode": "soft",

    "guided_attn_weight": 0.0,
    "regularization_weight": 0.0,
    "l1_loss_weight": 1.0,
    "batch_norm_position": "after",
    "mask_decoder": false,

    "reduction_factor": 3,
    "clip_outputs": false,
    "clip_lower_bound_decay": 0.1,
    "clip_max_value": 4,

    "max_output_length": 15,
    "end_prob": 0.5
  },

  "inference_config":{
    "model_avg_num": 1,
    "gl_iters": 64,
    "output_directory": "test_step3_sma",
    "synthesize_from_true_fbank": false
  },

  "optimizer":"warmup_adam",
  "optimizer_config":{
    "d_model":512,
    "warmup_steps":8000,
    "k":1.0
  },


  "dataset_builder": "speech_systhesis_dataset",
  "num_data_threads": 1,
  "trainset_config":{
    "data_csv": "examples/tts/data_baker/data/train_kaldi_newprosody_extend_newsplit.csv",
    "cmvn_file": "examples/tts/data_baker/data/cmvn_from_espnet",
    "audio_config": {"type": "MelSpectrum", "window_type": "hann", "upper_frequency_limit": 24000, "filterbank_channel_count": 80, "lower_frequency_limit": 0, "dither": 0.0, "window_length": 0.05, "frame_length": 0.0125, "remove_dc_offset": false, "preEph_coeff": 0.0, "output_type": 3, "sample_rate": 24000},
    "text_config": {"type":"eng_vocab", "model":"examples/tts/data_baker/data/vocab_newprosody_new"},
    "input_length_range":[10, 8000]
  },
  "devset_config":{
    "data_csv": "examples/tts/data_baker/data/dev_kaldi_newprosody_extend_newsplit.csv",
    "cmvn_file": "examples/tts/data_baker/data/cmvn_from_espnet",
    "audio_config": {"type": "MelSpectrum", "window_type": "hann", "upper_frequency_limit": 24000, "filterbank_channel_count": 80, "lower_frequency_limit": 0, "dither": 0.0, "window_length": 0.05, "frame_length": 0.0125, "remove_dc_offset": false, "preEph_coeff": 0.0, "output_type": 3, "sample_rate": 24000},
    "text_config": {"type":"eng_vocab", "model":"examples/tts/data_baker/data/vocab_newprosody_new"},
    "input_length_range":[10, 8000]
  },
  "testset_config":{
    "data_csv": "examples/tts/data_baker/data/test_kaldi_newprosody_extend_30.csv",
    "data_csv": "examples/tts/data_baker/data/jiwai.csv",
    "data_csv": "examples/tts/data_baker/data/eee.csv",
    "cmvn_file": "examples/tts/data_baker/data/cmvn_from_espnet",
    "audio_config": {"type": "MelSpectrum", "window_type": "hann", "upper_frequency_limit": 24000, "filterbank_channel_count": 80, "lower_frequency_limit": 0, "dither": 0.0, "window_length": 0.05, "frame_length": 0.0125, "remove_dc_offset": false, "preEph_coeff": 0.0, "output_type": 3, "sample_rate": 24000},
    "text_config": {"type":"eng_vocab", "model":"examples/tts/data_baker/data/vocab_newprosody_new"}
  }
}
